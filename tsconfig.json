{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": false, // 确保对库的类型检查
        "resolveJsonModule": true, // 如果需要解析 JSON 文件
        "forceConsistentCasingInFileNames": true // 强制文件名使用一致的大小写
    },
    "include": ["src", "src/**/*.ts", "src/types/*.ts"],
    "exclude": ["node_modules"]
}